<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="Module" value="github.com/HeavenKeyn/heavenutil" />
    <property name="LOG_PROFILE" value="testIOHook" />
    <property name="LOG_HOME" value="testdata" />

    <appender name="test">
        <file>${LOG_HOME}/%Y%m%d/sanywind.${LOG_PROFILE}.%Y%m%d%H%M.log</file>
        <policy>
            <LinkName>${LOG_HOME}/sanywind.${LOG_PROFILE}.log</LinkName>
            <MaxAge>3</MaxAge>
            <RotationTime>10</RotationTime>
        </policy>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
    </root>

    <logger func="${Module}/logran.testIOHook1" level="error" additivity="false">
        <appender-ref ref="test" />
        <appender-ref ref="console" />
    </logger>
    <logger func="${Module}/logran.testIOHook2" level="debug" additivity="false">
        <appender-ref ref="test" />
    </logger>
</configuration>