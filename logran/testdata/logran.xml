<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="Module" value="github.com/HeavenKeyn/heavenutil" />
    <property name="LOG_PROFILE" value="testIOHook" />
    <property name="LOG_HOME" value="testdata" />

    <appender name="test">
        <file>${LOG_HOME}/sanywind.${LOG_PROFILE}.log</file>
        <policy>
            <FileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/sanywind.${LOG_PROFILE}.%d{yyyy-MM-dd}.%i.log.zip</FileNamePattern>
            <MaxFileSize>50MB</MaxFileSize>
            <MaxHistory>100</MaxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </policy>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
    </root>

    <logger func="${Module}/logran.testIOHook1" level="error" additivity="false">
        <appender-ref ref="test" />
        <appender-ref ref="console" />
    </logger>
    <logger func="${Module}/logran.testIOHook2" level="debug" additivity="false">
        <appender-ref ref="test" />
    </logger>
</configuration>